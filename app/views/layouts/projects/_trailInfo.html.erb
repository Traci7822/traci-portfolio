  <div class="slideshowButtons">
    <a class="w3-btn-floating w3-display-left" onclick="plusTrailDivs(-1)">&#10094;</a>
    <a class="w3-btn-floating w3-display-right" onclick="plusTrailDivs(+1)">&#10095;</a>
  </div>

  <div class="projectReturn">
    <a href="#" class="navItem" id="projects">Return to Projects</a>
  </div>
</div>


<script>
  var trailSlideIndex = 1;
  showTrailDivs(trailSlideIndex);

  function plusTrailDivs(n) {
    showTrailDivs(trailSlideIndex += n);
  }

  function showTrailDivs(n) {
    var i;
    var x = document.getElementsByClassName('trailInfoPic');
    if (n > x.length) {trailSlideIndex = 1}
    if (n < 1) {trailSlideIndex = x.length}
    for (i = 0; i < x.length; i++) {
      x[i].style.display = "none";
    }
    x[trailSlideIndex-1].style.display = "block";
  }
</script>
